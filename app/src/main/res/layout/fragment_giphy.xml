<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".presintation.fragment.giphyFragment.GiphyFragment">


    <EditText
        android:id="@+id/search_giphy_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="10dp"
        android:layout_toStartOf="@+id/spinner_layout"
        android:autofillHints="no"
        android:focusable="true"
        android:hint="Search giphy"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:minHeight="50dp"
        android:paddingStart="30dp"
        android:paddingEnd="3dp" />

    <Spinner
        android:id="@+id/spinner_layout"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="4dp" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_giphy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/search_giphy_edit"
        android:layout_marginTop="4dp" />

</RelativeLayout>